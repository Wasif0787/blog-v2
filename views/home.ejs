<%- include("partials/header.ejs") %>
<h1>Your Journey Begins Here</h1>
<p><%= startingContent %></p>

<% postsArray.reverse().forEach(function(post) { %>
    <h1><%= post.title %> </h1>
    <h5>By ~ <%= post.author %></h5>
    <p> <%=post.content.substring(0, 100) + " ..." %>
        <a href="/posts/<%=post._id%>">Read More</a>
    </p>
<% }); %>

